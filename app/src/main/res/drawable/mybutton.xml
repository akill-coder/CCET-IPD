<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f96c6e" />
            <gradient android:angle="-90" android:startColor="#f96c6e" android:endColor="#f68e90"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f96c6e" />
            <solid android:color="#f96c6e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fb8081" />
            <gradient android:angle="-90" android:startColor="#f68e90" android:endColor="#f7a7a9"  />
        </shape>
    </item>








</selector>